{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "components/*": ["app/components/*"],
      "services/*": ["app/services/*"],
      "ducks/*": ["app/store/ducks/*"],
      "sagas/*": ["app/store/sagas/*"],
      "storeLoad": ["app/store/index.js"]
    }
  }
}
